<h1>AjaxApp</h1>
<%#newとcreateファイルを削除するとメモ投稿フォームがなくなってしまうので↓ブロックのコードを追加%>
  <%= form_with url: "/posts", method: :post,id: "form" do |form| %>
  <%= form.text_field :content  , id: "content"%><%#memoファイルでcontentを取得するためにidを指定%>
  <%= form.submit '投稿する' , id: "submit" %>
<% end %>

<div id="list"><%#投稿後にメモを追加する要素%>
</div>

<% @posts.each do |post| %>
<%#data-idとdata-checkのカスタムデータ属性を追加%>
  <div class="post" data-id=<%= post.id %> data-check=<%= post.checked %>>
    <div class="post-date">
    投稿日時：<%= post.created_at %>
  </div>
  <div class="post-content">
    <%= post.content %>
  </div>
</div>
<% end %>